<div class="container">
  <h1 class="page-header">Top 20
    <button type="button" class="btn btn-default btn-xs" data-id="options">Options
      <span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span>
    </button>
  </h1>
  <div class="option-setting" data-id="dropDown-options">
    <div class="col-xs-6 col-sm-4 genre">
      <label class>Genre</label>
      <%= select_tag "genre", options_for_select(movie_genres), multiple: true, style: "width: 75%", 'data-id': "select" %>
    </div>
    <div class="col-xs-6 col-sm-4 released-year">
      <label class>Released Year</label>
      <%= select_tag "released-year", options_for_select(released_years), multiple: true, style: "width: 50%", 'data-id': "select" %>
    </div>
    <button type="submit" class="btn btn-default" data-id="optionSet">
      <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
    </button>
  </div>
</div>

