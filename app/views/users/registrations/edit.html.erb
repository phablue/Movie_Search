<div class='container user-account'>
  <%= devise_error_messages! %>
  <h1 class='page-header'> My Account </h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal', method: :put }) do |f| %>
    <div class='form-group'>
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class='form-group'>
      <%= f.label :password, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= f.text_field :password, autocomplete: 'off', placeholder: "Leave Blank If You Don't Want To Change It", class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= f.text_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :current_password, class: 'col-sm-2 control-label' %>
      <div class='col-sm-10'>
        <%= f.text_field :current_password, autocomplete: 'off', placeholder: 'We Need Your Current Password To Confirm your changes', class: 'form-control' %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10'>
        <%= f.submit 'Update', class: 'btn btn-lg btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
  <%= button_to 'Cancel My Account', registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-default' %><br>
  <%= link_to 'Home', '/' %>
</div>
