<div class="container detail">
  <div class="page-header">
    <h1 class="movie-title">
      <%= @movie.title %>
      <small> <%= decorate(@movie.year) %> </small>
    </h1>
  </div>
  <div class="page-body">
    <div class="movie-info">
      <% unless @movie.rated == "N/A" %>
        <label>Rated</label><span><%= decorate(@movie.rated) %></span>
      <% end %>
      <% unless @movie.runtime == "N/A" %>
        <label>RunTime</label><span><%= decorate(@movie.runtime) %></span>
      <% end %>
      <% unless @movie.genre == "N/A" %>
        <label>Genre</label><span><%= decorate(@movie.genre) %></span>
      <% end %>
    </div>
    <% if @movie.poster == "N/A" %>
      <%= image_tag("no-image", class: "img-thumbnail") %>
    <% else %>
      <img src= "#{@movie.poster}" class="img-thumbnail"/>
    <% end %>
    <blockquote class="plot">
      <p><%= @movie.plot %></p>
    </blockquote>
    <div class="movie-score">
      <h4>
        <% unless @movie.imdb_rating == "N/A" %>
          <%= image_tag("imdb") %>
          <span class="rate"> <%= @movie.imdb_rating %> </span>
        <% end %>
        <% unless @movie.tomato_meter == "N/A" %>
          <%= image_tag("tomato") %>
          <span class="rate"> <%= @movie.tomato_meter %> </span>
        <% end %>
      </h4>
    </div>
    <div class="movie-whatch-link">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Watch Now</h3>
        </div>
        <div class="panel-body">
          <% unless available_watch?(@movie) %>
            <p class="text-danger">Sorry, Unavailable watch</p>
          <% end %>
          <% if netflix_has?(@movie) %>
            <a href="#{netflix_has?(@movie)}">
              Netflix <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
            </a>
          <% end %>
          <% if amazon_has?(@movie) %>
            <a href="#{amazon_has?(@movie)}">
              Amazon <span class="glyphicon glyphicon-play-circle" aria-hidden="true"></span>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>